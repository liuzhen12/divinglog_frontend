/**app.wxss**/
@import 'style/weui.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
  overflow: hidden;
}


page{
    background: #f5f5f5;
}

.box {
  font-family: Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', '微软雅黑', Arial, sans-serif;
  border-radius: 5px;
  box-shadow: 2px 1px 7px #909090;
  width:96%;
  margin-left:auto;
  margin-right: auto; 
  line-height: 2;
  font-size: 13px;
}

.widget__arrow {
  padding: 0px;
  width: 100%;
}

/*自定义*/
.dock_bottom {
  position:fixed;
  bottom: 0px;
  z-index: 500;
  width: 100%; 
}

.dock_top {
  position:fixed;
  top: 0px;
  z-index: 500;
  width: 100%; 
}

.flex-row {
  display:flex;flex-direction:row;
}
.flex-row navigator,label {
  flex-grow:1
}
.flex-column {
  display:flex;
  flex-direction:column;
  align-content: space-between;
}
.rectangular button,button:after {
  border-radius: 0px;
  border: 0px;
}
.remove-left-right-padding{
  padding:0px;
}

.btn-normal {
  font-size: 15px;
  font-family: Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', '微软雅黑', Arial, sans-serif;
}

.location-time-search-bar {
  display:flex;
  flex-direction:row;
  justify-content:space-around;
}

.location-time-search-bar label {
  font-size: 15px;
  font-family: NSimSun,Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', '微软雅黑', Arial, sans-serif;
  text-align: center;
  line-height: 2;
  color: #333333;
  padding: 5px 0;
}


