/**app.wxss**/
@import 'style/weui.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
  overflow: hidden;
}


page{
    background: #f5f5f5;
}

.box {
  font-family: Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', '微软雅黑', Arial, sans-serif;
  border-radius: 5px;
  box-shadow: 2px 1px 7px #909090;
  width:96%;
  margin-left:auto;
  margin-right: auto; 
  line-height: 2;
  font-size: 13px;
}

.list_box{
   font-family: Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', '微软雅黑', Arial, sans-serif;
  width:98%;
  margin-left:auto;
  margin-right: auto; 
  line-height: 2;
  font-size: 13px;
  margin-top:0;
}

.widget__arrow {
  padding: 0px;
  width: 100%;
}

/*自定义*/
.dock_bottom {
  position:fixed;
  bottom: 0px;
  z-index: 500;
  width: 100%; 
}

.dock_top {
  position:fixed;
  top: 0px;
  z-index: 500;
  width: 100%; 
}

.flex-row {
  display:flex;
  flex-direction:row; 
  justify-content: space-around;
}
.flex-row navigator,label {
  flex-grow:1
}
.flex-column {
  display:flex;
  flex-direction:column;
  align-content: space-between;
}
.rectangular button,button:after {
  border-radius: 0px;
  border: 0px;
}
.remove-left-right-padding{
  padding:0px;
}

.btn-normal {
  font-size: 15px;
  font-family: Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', '微软雅黑', Arial, sans-serif;
  height:38px;
}

.location-time-search-bar {
  display:flex;
  flex-direction:row;
  justify-content:space-around;
  height:40px;
}

.location-time-search-bar label {
  font-size: 15px;
  font-family: NSimSun,Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', '微软雅黑', Arial, sans-serif;
  text-align: center;
  line-height: 2;
  color: #333333;
  padding: 5px 0;
}

.timeline {
  display:flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  flex-direction: column;
  align-items: center;
  margin-bottom:15px;
}

.timeline-month {
  font-size: 12px;
  color:#555555;
}

.timeline-day {
  font-size: 12px;
  font-weight: bold;
  color:#111111;
}

.card {
  font-family: Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', '微软雅黑', Arial, sans-serif;
  border-radius: 5px;
  box-shadow: 2px 1px 7px #909090;
  margin-left:auto;
  margin-right: 10px; 
  margin-bottom:15px;
  line-height: 2;
  font-size: 12px;
  color:#111111;
  -webkit-box-flex: 5.5;
  -webkit-flex: 5.5;
          flex: 5.5;
}

.card-img {
  width: 100%;
  height: 130px;
  padding:0;
}
.card-title {
  font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
  font-size: 14px;
  padding-left: 10px;
}
.card-content {
  display:flex;
  flex-direction:row;
  padding-left: 10px;
}

.card-content-left {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}

.card-content-right {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
}

