<!--pages/registercoach/registercoach.wxml-->
<view class="page">
    <view class="page__hd">
        <view class="page__title"></view>
        <view class="page__desc"></view>
    </view>
    <view class="page__bd page__bd_spacing">
        <view class="weui-cells box">
            <view class="weui-cell weui-cell_access">
                <view class="section">
                    <picker bindchange="bindPickerChange" value="{{index}}" range="{{array1}}">
                        <view class="picker">
                            语言：{{array1[index]}}
                        </view>
                    </picker>
                </view>
            </view>
            <view class="weui-cells weui-cells_after-title">
              <view class="weui-cell weui-cell_input">
                  <view class="weui-cell__bd">
                      <input class="weui-input" placeholder="请输入您的等级" bindinput="userTitleInput"/>
                  </view>
              </view>
            </view>
            <view class="weui-cell weui-cell_access">
                <view class="section">
                    <picker bindchange="bindPickerChangeOther" value="{{indexOther}}" range="{{array2}}">
                        <view class="picker">
                            是否店长：{{array2[indexOther]}}
                        </view>
                    </picker>
                </view>
            </view>
        </view>
        <view class="weui-cells box">
            <button class="weui-btn" type="primary" bindtap="listenerButton">提交</button>
            <!--<loading hidden="{{hiddenLoading}}">正在提交</loading>            -->
        </view>
    </view>
</view>
